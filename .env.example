# Database Configuration
# Prefer URL-based configuration
DATABASE_URL=postgres://postgres:postgres@localhost:5432/helpdesk_commander_dev
TEST_DATABASE_URL=postgres://postgres:postgres@localhost:5432/helpdesk_commander_test

# Optional: database names used when DATABASE_URL/TEST_DATABASE_URL are not set
DATABASE_NAME=helpdesk_commander_dev
TEST_DATABASE_NAME=helpdesk_commander_test

# PostgreSQL (used when DATABASE_URL/TEST_DATABASE_URL are not set)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Docker postgres default database (docker-compose only)
POSTGRES_DB=postgres

# Phoenix
SECRET_KEY_BASE=your_secret_key_base_here
PHX_HOST=localhost
PHX_PORT=4000

# Environment
MIX_ENV=dev
